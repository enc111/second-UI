.standard-buttons__table
  display table
  text-align center
  border-collapse collapse
  border-width 0
  margin 3.89rem auto 0 auto
ul
  display table-row
li
  display table-cell
  vertical-align bottom

li button
  color #ffffff
  text-transform uppercase
  font-weight bold
  font-size 0.67rem
  width 6.5rem
  height 1.778rem
  border-radius 0.28rem
  border-width 0
  margin 0.556rem 0.639rem

.standard-buttons__table_little
  width 4.33rem
  height 1.278rem
  font-size 0.56rem

li:first-of-type button
li:nth-of-type(2) button
  background-color first-color

li:last-of-type button
li:nth-of-type(3) button
  background-color second-color

li button:active
  background-color #ffffff

li:first-of-type button:active
li:nth-of-type(2) button:active
  color first-color

li:last-of-type button:active
li:nth-of-type(3) button:active
  color second-color



