.location
  & h1
    margin 2.61rem auto 1.67rem auto
  & .location_map
    height 11.389rem//15.22rem
  & .location__info
  & .location_map
    margin 0 auto
    width 33rem
  & .location__info
    height 3.89rem
    background second-color
    color #ffffff
    text-align left
    vertical-align top
    & span
      display inline-block
      &:first-of-type
        margin 1rem 1.56rem auto 1.67rem
        font-family LatoLight
        font-size 1.67rem
    & button
      vertical-align text-bottom
      width 1.5rem
      height 1.5rem
      background-color second-color
      &:first-of-type
        background-icon "location/location.svg" 100%
        margin-right 1rem
      &:nth-of-type(2)
        background-icon "location/marker-icon.png" 77%
