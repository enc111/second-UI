.location
  & h1
    margin 2.41rem auto 1.6rem auto
  & .location_map
    height 11.367rem//15.22rem
  & .location__info
  & .location_map
    margin 0 auto
    width 33rem
    border-radius 0.2rem 0.2rem 0 0
  & .location__info
    height 3.84rem
    background second-color
    color #ffffff
    text-align left
    vertical-align top
    border-radius 0 0 0.2rem 0.2rem
    & span
      display inline-block
      &:first-of-type
        margin 0.7rem 1.56rem auto 1.5rem
        font-family LatoLight
        font-size 1.67rem
    & input[type='button']
      vertical-align text-bottom
      width 1.5rem
      height 1.5rem
      background-color second-color
      &:first-of-type
        background-icon "location/location.svg" 100%
        margin-right 1rem
      &:nth-of-type(2)
        background-icon "location/marker-icon.png" 77%
.location__info_address
  font-family LatoBlack
  font-size 0.67rem
  text-transform uppercase
  margin-right 11.33rem