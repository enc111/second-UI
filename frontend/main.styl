@font-face
  font-family LatoBlack
  src url("fonts/Lato-Black.ttf"),
    url("fonts/Lato-Black.svg"),
    url("fonts/Lato-Black.woff")

@font-face
  font-family LatoLight
  src url("fonts/Lato-Light.ttf"),
    url("fonts/Lato-Light.svg"),
    url("fonts/Lato-Light.woff")

