arrow-std-color=#ffffff
arrow-circle-color=#e5e5e5
pie-text-color=#9d9d9d
input-text-color=#747474
first-color=#4eb7a8
first-border-color=#28a290
second-color=#e75735
second-border-color=#bf3e1f
header-color=#4f4f4f

circle(n, color)
  width n
  height n
  border-radius 50%
  background-color color

html
  font-size 18px

body
  width 38.89rem
  margin 0 auto
  text-align center
  font-family LatoBlack

h1,
h2
  font-size 1rem
  word-spacing 0.61rem
  text-transform uppercase
  color header-color

.ripple-effect
  position absolute
  border-radius 50%
  width: 50px//////////////
  height: 50px////////////////////
  background white
  animation ripple-animation 2s

@keyframes ripple-animation
  from
    transform scale(1)
    opacity 0.4
  to
    transform scale(2)
    opacity 0
