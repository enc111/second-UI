form
  position relative
  margin 150px
  text-align left

output
  position absolute
  background-color second-color
  width 2rem
  height 1.39rem
  text-align center
  color white
  border-radius 0.44rem
  display inline-block
  font: LatoBlack 0.72rem
  bottom: 130%
  left: 0

output:after
  content: ""
  position: absolute
  width: 0
  height: 0
  border-top: 0.278rem solid second-color
  border-left: 0.139rem solid transparent
  border-right: 0.139rem solid transparent
  top: 100%
  left: 50%
  margin-left: -0.139rem
  margin-top: -0.056rem