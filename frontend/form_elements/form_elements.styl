@import "../mixins/button.styl"

little-text()
  display inline-block
  text-transform uppercase
  font-family LatoBlack
  font-size 0.556rem
  text-align center
  color #ffffff
  background transparent

.form-elements h1
  margin 2.72rem auto 2.5rem auto

.form-elements h2
  margin 0 auto 1.72rem auto

.form-elements > div
  display inline-block
  vertical-align top

.form-elements__form
  display inline-block
  width 15.94rem
  margin 0 5.389rem 0 auto
  & textarea
  & input[type='submit']
    display block
  & > div
    margin 0
    padding 0
    text-align left

[class^='form-elements__form_']
  margin 0 0 0.78rem 0
  vertical-align middle
  border none

[class^='form-elements__form_']:not([type='submit'])
  background arrow-circle-color
  border-radius 0.2rem

[class^='form-elements__form_']:not([type='submit'])::-moz-placeholder
  font-family SourceSansProRegular
  color input-text-color
  font-size 0.78rem
  font-weight bolder

[class^='form-elements__form_']:not([type='submit'])::-ms-input-placeholder
  font-family SourceSansProRegular
  color input-text-color
  font-size 0.78rem
  font-weight bolder

[class^='form-elements__form_']:not([type='submit'])::-webkit-input-placeholder
  font-family SourceSansProRegular
  color input-text-color
  font-size 0.78rem
  font-weight bolder

.form-elements__form input:not([type='submit'])
  height 1.61rem
  width 10.27rem
  padding 0 0.667rem

.form-elements__form_valid-msg
  display none
  width 3.94rem
  height 1.61rem
  padding 0

.form-elements__form input:valid:focus + div.form-elements__form_valid-msg
.form-elements__form input:invalid:not([type='submit']) + div.form-elements__form_valid-msg
  display inline-block
  margin-left 0.39rem
  &:before
    content ''
    display inline-block
    position absolute
    width 0
    height 0
    border 0.23rem solid transparent
    border-left none
    margin 0.6rem auto auto -0.22rem
  &:after
    content ''
    line-height 1.61rem
    width 3.94rem
    height 1.61rem
    little-text()

.form-elements__form input:valid:focus + div.form-elements__form_valid-msg
  background first-color
  &:before
    border-right-color first-color
  &:after
    content 'Thanks!'

.form-elements__form input:invalid:not([type='submit']) + div.form-elements__form_valid-msg
  background second-color
  &:before
    border-right-color second-color
   &:after
    content 'Error'

.form-elements__form_message
  width 14.606rem
  height 3.6rem
  padding 0.667rem
  resize none

.form-elements__form_submit
  button-appearence 6.5rem 1.778rem 0.67rem #ffffff first-color
  button-shadow 0.2rem first-border-color
  margin-left auto
  margin-right 0

.form-elements__toggles
  display inline-block
  margin-right 0.89rem
.form-elements__toggles label
  display inline-block
  width 3.22rem
  height 1.33rem
  border-radius 1.72rem
  background arrow-circle-color

.form-elements__toggles input[type='checkbox']
  display none
.form-elements__toggles label:before,
.form-elements__toggles input[type='checkbox']:checked + label:after
  content ''
  display inline-block
  line-height 1.33rem
  circle 1.056rem #ffffff
  vertical-align middle

.form-elements__toggles label:after,
.form-elements__toggles input[type='checkbox']:checked + label:before
  little-text()
  line-height 1.33rem
  margin 0
  vertical-align middle

.form-elements__toggles input[type='checkbox']:checked + label
  background first-color
  vertical-align middle
  line-height 1.33rem
  &:before
    content 'on'
    display inline
  &:after
    margin auto -0.26rem auto 0.389rem

.form-elements__toggles label:before
  margin auto 0.389rem auto -0.24rem

.form-elements__toggles label:after
  content 'off'




