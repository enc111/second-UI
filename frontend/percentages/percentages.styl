pie-text-color=#9d9d9d

.pie
  display inline-block
  circle 5.44rem #ffffff
  position relative
  background-image linear-gradient(to right, transparent 50%, second-color 0)
  font-family LatoLight
  margin-right 2.06rem

@keyframes spin
  to
    transform rotate(.5turn)

@keyframes bg
  50%
    background-color second-color

.pie::before
  content ''
  position absolute
  top 0
  left 50%
  width 50%
  height 100%
  border-radius 0 100% 100% 0 / 50%
  background-color inherit
  transform-origin left
  animation spin 50s linear infinite,
    bg 100s step-end infinite
  animation-play-state paused
  animation-delay inherit

.pie::after
  content attr(id)
  position absolute
  top 6%
  left 6%
  circle 88% #ffffff
  color pie-text-color
  font-size 2.22rem
  text-align center
  line-height 4.48rem
