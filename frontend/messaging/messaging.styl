.messaging
  display inline-block
  vertical-align top
  & h1
    margin 2.72rem auto 1.389rem auto
.messaging__block
  width 15.94rem
  height 23.83rem

.messaging__block__header
  position relative
  width 100%
  height 27.28%
  background first-border-color
  border-radius 0.2rem 0.2rem 0 0
  &:after
    content ''
    display block
    position absolute
    left 50%
    top 100%
    margin-top -(photo-size / 2)rem
    margin-left -(photo-size / 2)rem
    circle photo-size transparent
    border 0.278rem solid arrow-circle-color
    background-icon "messaging/woman1.png" 100%
  & p
    font-family SourceSansProLight
    font-size 1.89rem
    color #ffffff
    line-height 4.56rem
    height 70.15%
    border-radius 0.2rem 0.2rem 0 0
    background first-color

.messaging__block__body
  height 72.72%
  background-color calendar-day-color
  border-radius 0 0 0.2rem 0.2rem